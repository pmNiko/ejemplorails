<div class="form-inline">
   <div class="form-group">
    <%= f.label :phone_type %>
    <%= f.select(:phone_type,
       ['Mobile', 'Work', 'Home'],
       {},
       {:class => 'form-control'}) %>
  </div>
  <div class="form-group">
    <%= f.label :number %>
    <%= f.text_field :number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :_destroy %>
    <a href="#" class="btn btn-warning" onclick="removePhone(this)">
      <span class="glyphicon glyphicon-minus"></span>
    </a>
  </div>
</div>
